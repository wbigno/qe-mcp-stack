# Azure DevOps Configuration
ADO_PAT=YOUR_PERSONAL_ACCESS_TOKEN_HERE
ADO_ORG=YOUR_ORG_NAME_HERE
ADO_PROJECT=YOUR_PROJECT_NAME_HERE

# OpenAI API (for AI-powered MCPs like test generation)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Anthropic Claude API (alternative AI provider)
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# Application Paths (relative to docker volume mounts)
APP1_PATH=/mnt/apps/app1
APP2_PATH=/mnt/apps/app2
APP3_PATH=/mnt/apps/app3
APP4_PATH=/mnt/apps/app4

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=change_this_to_a_random_secret_key
API_RATE_LIMIT=100

# Feature Flags
ENABLE_AUTO_HEALING=true
ENABLE_TEST_GENERATION=true
ENABLE_COVERAGE_ANALYSIS=true
