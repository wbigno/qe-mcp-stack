{
  "name": "javascript-coverage-analyzer-mcp",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP for analyzing JavaScript/TypeScript test coverage (Jest, Vitest, Cypress)",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "dependencies": {
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "istanbul-lib-coverage": "^3.2.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2"
  }
}
